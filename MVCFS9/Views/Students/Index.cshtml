
@model IEnumerable<Student>
@{
    Layout = "_mainLayout";
}
<h2>All Students</h2>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Phone</th>
            <th scope="col">Delete</th>
            <th scope="col">Edit</th>
         
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.password </td>
                <td>@item.Phone</td>
                <td>
                    <a class="nav-link text-light" asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id"> Delete</a>
                </td>
                <td>
                    <a class="nav-link text-light" asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id"> Edit</a>
                </td>

            </tr>
            
        }
       
        
    </tbody>
</table>

<a href="/Students/Create" class="btn btn-outline-primary ">Add new Student</a>